extends ../layout/layoutBase.pug

block content
	+b.index-page
		+page-header()
			li.page-header__list-item.page-header__list-item--active
				a(href="index.html") Про журнал
			li.page-header__list-item
				a(href="editorial-board.html") Редакцiйна колегiя
			li.page-header__list-item
				a(href="authors.html") Авторам
			li.page-header__list-item
				a(href="news.html") Новини
			li.page-header__list-item
				a(href="archive.html") Архiв
			li.page-header__list-item
				a(href="contacts.html") Контакти

		+page-promo('../img/page-promo--home.png', 'ЮРИДИЧНИЙ НАУКОВИЙ ЖУРНАЛ', 'Журнал інформує про події наукового життя та юридичної освіти в Україні, проводить власні наукові дослідження, конференції та інші наукові заходи, надає інші послуги', 'Підписатися на розсилку')

		+b.SECTION.about-company
			+e.container
				+headline('Про “Свiт науки та освiти”', 'В юридичному науковому журналі  «Свiт науки та освiти»  висвітлюються актуальні питання теорії та історії держави і права, державного управління, адміністративного,  конституційного, міжнародного, цивільного і підприємницького, аграрного та екологічного права, кримінології, кримінального, кримінально-процесуального права та інших галузей права')
				+e.cards-list
					+card-about('Iнформацiя', 'Офіційно зареєстровано з присвоєнням міжнародного стандартного номеру періодичного видання ISSN 2410-244X (International Standard Serial Number). Має електронну та друковану* версії.<span>Профіль: проблеми юридичної науки та практики.</span>', 'info')
					+card-about('Колектив', 'Колектив наукового юридичного журналу складають молоді амбіційні науковці та практики, які мають високу кваліфікацію та володіють глибокими знання в різних галузях юридичної науки', 'team')
					+card-about('Цільова аудиторія ', 'Науковці-правники, викладачі, аспіранти, здобувачі, студенти- юристи, практики (судді, прокурори, адвокати, працівники органів МВС України, юрисконсульти, державні службовці) і всі, кого цікавить правова тематика.', 'employee')

		+b.SECTION.partners
			+e.container
				+headline('Партнери', 'Сподіваємося, що на нашому сайті Ви знайдете відповіді на свої  питання, а в нас - надійного помічника.')
				+e.UL.list
					+e.LI.list-item
						img(src='../img/partners__logo1.png')
					+e.LI.list-item
						img(src='../img/partners__logo2.png')
					+e.LI.list-item
						img(src='../img/partners__logo3.png')
					+e.LI.list-item
						img(src='../img/partners__logo4.png')
					+e.LI.list-item
						img(src='../img/partners__logo5.png')
					+e.LI.list-item
						img(src='../img/partners__logo6.png')

		+contacts()

		+page-footer()